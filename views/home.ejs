<%- include("partials/header") -%>
<section id="title">
    <div class="container-fluid p-4">
        <div class="row m-1">
            <div class="col-lg-2 d-flex align-items-center">
                <div class="font-weight-bold" style="font-size: 35px;">
                    <a href="/note/show" class="text-white text-decoration-none">
                        NoteVault
                    </a>
                </div>
            </div>
            <div class="col-lg-10 d-flex justify-content-end align-items-center">
                <!-- Dark mode toggle switch with custom sun and moon icons -->
                <div class="toggle-container">
                    <label class="switch">
                        <input type="checkbox" id="modeToggle">
                        <span class="slider round">
                            <span class="slider-icon sun"><i class="material-symbols-outlined">light</i></span>
                            <span class="slider-icon moon"><i class="material-symbols-outlined">dark</i></span>
                        </span>
                    </label>
                </div>
                <div class="row p-2 font-weight-light mr-10">
                    <div class="col-lg-6 text-center">
                        <a href="/user/login" class="text-white text-decoration-none">
                            Login
                        </a>
                    </div>
                    <div class="col-lg-6 text-center">
                        <a href="/user/register" class="text-white text-decoration-none">
                            Register
                        </a>
                    </div>

                </div>
            </div>
        </div>
        <div class="row mt-[100px] align-items-center">
            <div class="col-lg-8 py-12 pb-[80px] mb-16">
                <p style="font-size: 50px;">Keep your thoughts, ideas, and important information in one secure place.
                </p>
            </div>
            <div class="col-lg-4 pb-16">
                <img class="img-fluid" src="/image/notebook.jpg" alt="notebook">
            </div>
        </div>
    </div>

</section>

<section class="features p-5">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 text-center" style="font-size: 40px;">
				Why Choose NoteVault?
			</div>
		</div>
		<div class="row" style="font-size: 20px">
			<div class="col-lg-4 text-center pt-4">
				<i class="fa-solid fa-check fa"></i>
				<h1>Easy Note Organization</h1>
				<p>Create, categorize, and search your notes effortlessly.</p>
			</div>
			<div class="col-lg-4 text-center pt-4">
				<i class="fa-solid fa-universal-access fa"></i>
				<h1>Access Anywhere</h1>
				<p>
					Access your notes from any device, whether it's your computer, tablet,
					or smartphone.
				</p>
			</div>
			<div class="col-lg-4 text-center pt-4">
				<i class="fa-solid fa-lock fa"></i>
				<h1>Secure and Private</h1>
				<p>
					Your notes are encrypted and protected, ensuring your data is safe.
				</p>
			</div>
		</div>
	</div>
</section>

